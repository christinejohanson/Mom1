@page
@model MyApp.Namespace.RazorModel
@{
    ViewData["Title"] = "Razor";
    var date = DateTime.Now;
    var weekday = DateTime.Today.DayOfWeek.ToString();
    string[] courses = { "DT057G Webbutveckling I", "DT084G Introduktion till programmering i JavaScript", "DT068G Webbanvändbarhet", "DT003G Databaser", "DT093G Webbutveckling II"
    , "DT197G Webbdesign för CMS", "DT173G Webbutveckling III", "IG021G Projektledning", "DT193G Fullstack-utveckling med ramverk", "DT162G JavaScript-baserad webbutveckling"
    , "DT071G Programmering i C#.NET", "DT191G Webbutveckling med .NET", "IG021G Affärsplaner och kommersialisering" };
}
<div class="content">
<h1 class="display-4">@ViewData["Title"]</h1>


<h5>Information</h5>

<p>Datum / klockslag: @date</p>


@if (weekday == "Monday")
{
    <p>Idag är det måndag!</p>
}
else
{
    <p>Idag är det inte måndag!</p>
}

<h5>Kurser jag läst:</h5>

<ul>
    @foreach (var course in courses)
    {
        <li>@course</li>
    }
</ul>
</div>
