<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mom1</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mom1.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- header med bild och datum -->
    <header>
        <div class="topheader">
            <img src="img/logotype3.jpg" class="logotype" alt="logotype razor" />

            @{
                var date = DateTime.Now.ToShortDateString();
            }

            <div class="datumruta">
                <p>Dagens datum är: @date</p>
            </div>

        </div>
    </header>

    <div class="two_container">
        <!-- menynavigering -->
        <nav class="leftmenu">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Razor">Razor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/About">Om</a>
                </li>
            </ul>
            <div class="toggle">
                <input type="checkbox" id="toggle" />
                <label for="toggle"></label>
            </div>

        </nav>

        <!-- huvudinnehåll -->
        <div class="rightcontent">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <p>
            Av Student Christine Johanson - Kontakta mig via e-post: chjo2104@student.miun.se
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>